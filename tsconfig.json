{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/server/api/*"
      ],
      "@core/*": [
        "src/server/core/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config": [
        "src/server/core/config/index"
      ],
      "@server": [
        "src/server/index"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}